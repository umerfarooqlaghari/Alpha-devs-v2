// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator client_backend {
  provider = "prisma-client-js"
  output   = "../backend/node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          UserRole  @default(USER)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  contacts      Contact[]
  trials        Trial[]

  @@map("users")
}

// Account model for OAuth providers
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Session model for user sessions
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Contact form submissions
model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String
  type      ContactType @default(INQUIRY)
  date      String?
  time      String?
  status    ContactStatus @default(PENDING)
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("contacts")
}

enum ContactType {
  INQUIRY
  BOOKING
}

// Trial requests
model Trial {
  id          String      @id @default(cuid())
  email       String
  product     String
  fullName    String
  company     String?
  status      TrialStatus @default(PENDING)
  userId      String?
  trialEndDate DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("trials")
}

// Enums
enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

enum ContactStatus {
  PENDING
  REVIEWED
  RESPONDED
  CLOSED
}

enum TrialStatus {
  PENDING
  APPROVED
  ACTIVE
  EXPIRED
  CANCELLED
}

// Hero Section Content
model HeroSlide {
  id              String   @id @default(cuid())
  order           Int      @default(0)
  topCaption      String
  badge           String
  title           String
  description     String   @db.Text
  sliderText      String
  imageUrl        String
  imagePublicId   String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("hero_slides")
}

// Cloudinary Images
model CloudinaryImage {
  id          String   @id @default(cuid())
  publicId    String   @unique
  url         String
  format      String
  width       Int?
  height      Int?
  size        Int?
  folder      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("cloudinary_images")
}

// Service model for dynamic services carousel
model Service {
  id          String   @id @default(cuid())
  title       String
  description String?
  keywords    String[]
  videoUrl    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}

// Testimonials
model Testimonial {
  id          String   @id @default(cuid())
  author      String
  role        String
  company     String
  quote       String   @db.Text
  image       String?  // Cloudinary URL
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("testimonials")
}

// Products
model Product {
  id              String   @id @default(cuid())
  name            String
  slug            String   @default("")
  tagline         String
  category        String
  description     String   @db.Text
  
  // Hero Section
  heroTitle       String?
  heroSubtitle    String?
  heroDescription String?  @db.Text
  
  // Media
  features        String[]
  imageUrl        String?
  imagePublicId   String?
  videoUrl        String?
  videoPublicId   String?
  
  // Relations
  infoCards       ProductInfoCard[]
  contentBlocks   ProductContentBlock[]
  
  order           Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("products")
}

model ProductInfoCard {
  id          String   @id @default(cuid())
  productId   String
  title       String
  description String?  @db.Text
  tag         String?  // e.g. "19-60", "Family"
  imageUrl    String?
  publicId    String?
  order       Int      @default(0)
  
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_info_cards")
}

model ProductContentBlock {
  id          String   @id @default(cuid())
  productId   String
  type        String   @default("text") // "text", "image", "heading"
  content     String   @db.Text
  style       Json?    // { fontSize, bold, color, align }
  imageUrl    String?
  publicId    String?
  order       Int      @default(0)

  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_content_blocks")
}

model PageMedia {
  id          String   @id @default(cuid())
  pageName    String   // e.g., "Home", "About", "Services"
  sectionName String   // e.g., "Hero", "Features"
  fieldName   String   // e.g., "backgroundVideo", "image1"
  mediaType   String   // "image" or "video"
  url         String
  publicId    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([pageName, sectionName, fieldName])
  @@map("page_media")
}
